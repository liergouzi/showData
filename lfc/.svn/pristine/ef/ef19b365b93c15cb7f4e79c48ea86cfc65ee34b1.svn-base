<style>
    .cause{
        width: 120px;
        line-height: 30px;
        border: 1px solid #999999;
        color: #999999;
        margin-right: 20px;
    }
    .causeActive{
        border-color: #D64635;
        color: #D64635;
    }
</style>
<div class="portlet box red portlet-mg0 ">
    <div class="portlet-title">
        <div class="caption">
            <i class="fa fa-gift"></i>删除销售员</div>
        <div class="tools">
            <i class="fa fa-close" ng-click="cancel()"></i>
        </div>
    </div>
    <div class="portlet-body form">
        <form class="form-horizontal" role="form">
            <div class="form-body">
                <div class="form-group">
                    <label class="col-md-12 bottom-md">删除销售员原因</label>
                    <div class="col-md-12">
                        <label ng-repeat="li in causeList" class="cause text-center" ng-class="{causeActive:li==causeChecked.active}" ng-click="ck()">
                            <input name="cause"  ng-model="causeChecked.active" type="radio" class="hide"  ng-value="li"/>{{li}}
                        </label>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-12 bottom-md">其他说明</label>
                    <div class="col-md-12">
                        <textarea ng-model="cause" placeholder="请输入其他原因说明" style="width: 100%;height: 130px;resize:none"></textarea></div>
                </div>
            </div>
            <div class="form-actions right1">
                <button type="button" class="btn green" ng-click="ok()">确认删除</button>
                <button type="submit" class="btn default" ng-click="cancel()">取消</button>
            </div>
        </form>
    </div>
</div>

