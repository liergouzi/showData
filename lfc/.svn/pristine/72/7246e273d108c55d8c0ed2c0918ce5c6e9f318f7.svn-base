<div>
    <div class="portlet box red portlet-mg0 ">
        <div class="portlet-title" style="min-height: 36px">
            <div class="caption" style="padding: 8px 0 6px;">{{doing}}</div>
            <div class="tools" style="padding: 10px 0 5px;">
                <i class="fa fa-close big-icon" ng-click="cancel()"></i>
            </div>
        </div>
        <div class="portlet-body form">
            <form class="form-horizontal" role="form">
                <div class="form-body" style="padding:40px 20px 0 20px">
                    <div class="form-group">
                        <label class="col-md-3 control-label">所属部门</label>
                        <div class="col-md-8">
                            <select class="custom-control" ng-model="params.deptId"
                                    ng-options="m.id as m.name for m in depts" ng-if="look!=1">
                            </select>
                            <input class="form-control" ng-model="params.deptId" ng-if="look==1" ng-disabled="look==1"/>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-3 control-label">职位</label>
                        <div class="col-md-8">
                            <input class="form-control" ng-model="params.position" ng-disabled="look==1"/>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-3 control-label">用户名</label>
                        <div class="col-md-8">
                            <input class="form-control" ng-model="params.loginId" ng-disabled="look==1" ng-change="checkLoginId()">
                            <input class="form-control" ng-model="warninfo" readonly="readonly" style="color: red;" ng-if="warninfo"/>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-3 control-label">姓名</label>
                        <div class="col-md-8">
                            <input class="form-control" ng-model="params.name" ng-disabled="look==1"/>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-3 control-label">性别</label>
                        <div class="col-md-8 custom-control" ng-if="look!=1">
                            <label>
                                <input name="yes" type="radio" ng-model="params.gender" value="1">男</label>&nbsp;&nbsp;&nbsp;&nbsp;
                            <label>
                                <input name="yes" type="radio" ng-model="params.sex" value="2">女</label>
                        </div>
                        <div class="col-md-8" ng-if="look==1">
                            <input class="form-control" ng-model="params.gender|sexFilter" ng-disabled="look==1"/>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-3 control-label">身份证号</label>
                        <div class="col-md-8">
                            <input class="form-control" ng-model="params.identityNum" ng-disabled="look==1"/>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-3 control-label">生日</label>
                        <div class="col-md-8">
                            <input class="form-control" ng-model="params.birthday" ng-if="look==1" readonly="readonly"/>
                            <div class="date date-picker" style="position: relative" data-date="new Date()"  ng-if="look!=1"
                                 data-date-format="yyyy-mm-dd"
                                 data-date-viewmode="years">
                                <input class="form-control" ng-model="params.birthday"/>
                                <i class="btn sm-btn default fa fa-calendar"></i>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-3 control-label">手机号码</label>
                        <div class="col-md-8">
                            <input class="form-control" ng-model="params.mobile" ng-disabled="look==1"/>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-3 control-label">电子邮箱</label>
                        <div class="col-md-8">
                            <input class="form-control" ng-model="params.email" ng-disabled="look==1"/>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-3 control-label">住址</label>
                        <div class="col-md-8">
                            <input class="form-control" ng-model="params.address" ng-disabled="look==1"/>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-3 control-label">籍贯</label>
                        <div class="col-md-8">
                            <input class="form-control" ng-model="params.nativeLocation" ng-disabled="look==1"/>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-3 control-label">政治面貌</label>
                        <div class="col-md-8">
                            <select class="custom-control" ng-model="params.politicalStatus" ng-if="look!=1"
                                    ng-options="m.value as m.name for m in dicts['ZZMM']">
                            </select>
                            <input class="form-control" ng-model="params.politicalStatus|zzmmFilter" ng-if="look==1" ng-disabled="look==1"/>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-3 control-label">备注</label>
                        <div class="col-md-8">
                            <textarea ng-model="params.remark" style="width: 100%;height:90px;resize:none"
                                      ng-disabled="look==1"></textarea>
                        </div>
                    </div>
                </div>
                <div class="form-foot">
                    <button class="btn green confirm" ng-click="ok()" ng-disabled="params.loginId==''||warninfo!=''">提交</button>
                    <button class="btn default cancel" ng-click="cancel()">关闭</button>
                </div>
            </form>
        </div>
    </div>
</div>