<style>
    .cause{
        width: 120px;
        line-height: 30px;
        border: 1px solid #999999;
        color: #999999;
        margin-right: 20px;
    }
    .causeActive{
        border-color: #D64635;
        color: #D64635;
    }
</style>
<div class="portlet box red portlet-mg0 ">
    <div class="portlet-title">
        <div class="caption">
            <i class="fa fa-gift"></i>拒绝原因</div>
        <div class="tools">
            <i class="fa fa-close" ng-click="cancel()"></i>
        </div>
    </div>
    <div class="portlet-body form">
        <form class="form-horizontal" role="form">
            <div class="form-body">
                <div class="form-group">
                    <div class="col-md-12">
                        <textarea ng-model="reason" placeholder="请输入拒绝原因" style="width: 100%;height: 130px;resize:none"></textarea></div>
                </div>
            </div>
            <div class="form-actions right1">
                <button type="button" class="btn green" ng-click="ok()">确认拒绝</button>
                <button type="submit" class="btn default" ng-click="cancel()">取消</button>
            </div>
        </form>
    </div>
</div>

