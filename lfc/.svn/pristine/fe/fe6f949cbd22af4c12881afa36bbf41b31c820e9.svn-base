<div data-ng-controller="restController">
    <div data-ng-controller="siteAdminCtrl">
<h3 class="page-title"><i class="fa fa-area-chart"></i><span>站点情况</span></h3>
<div class="row">
    <div class="col-md-3">
        <div class="portlet light bordered radius">
            <div class="inline-block middle img-circle color-img" >
                <img src="img/u1664.png" >
            </div>
            <div class="inline-block middle img-p">
                <p ng-bind="params.month"></p>
                <p style="color: #57616c">统计区间</p>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="portlet light bordered radius">
            <div class="inline-block middle img-circle color-img" style="background-color: #D64635">
                <img src="img/u1728.png">
            </div>
            <div class="inline-block middle img-p">
                <p>{{params.stationCount}}个</p>
                <p style="color: #57616c">站点总数&nbsp;&nbsp;&nbsp;</p>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="portlet light bordered radius">
            <div class="inline-block middle img-circle color-img" style="background-color: #36c6D3">
                <img src="img/u1752.png">
            </div>
            <div class="inline-block middle img-p">
                <p>{{params.stopStationCount}}个</p>
                <p style="color: #57616c">停机站点数</p>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="portlet light bordered radius">
            <div class="inline-block middle img-circle color-img" style="background-color: #3f56B5">
                <img src="img/u1750.png">
            </div>
            <div class="inline-block middle img-p">
                <p>{{params.warnStationCount}}个</p>
                <p style=";color: #57616c">预警站点数</p>
            </div>
        </div>
    </div>
    <div class="col-md-6 text-center">
        <div class="portlet light bordered radius list">
            <p>考核分数排名前6的站点</p>
            <div style="margin: 20px 0">&nbsp;</div>
            <div class="ranking-list scroller custom-select-scroll1" data-always-visible="1" style="height: 280px;"  data-rail-visible1="0"
                 data-handle-color="#ccc">
                <p ng-repeat="x in params.topStations"><span class="ranking">{{x.index}}</span><span>{{x.station.name}}</span> <span>{{100-x.score}}分</span></p>
            </div>
        </div>
    </div>
    <div class="col-md-6 text-center">
        <div class="portlet light bordered radius list">
            <p style="background-color: #f04b46">违规站点列表</p>
            <div>
                <p style="font-weight: 700;font-size: 16px;color: #F04B46;">共计违规站点数为:{{params.violationsStation.length}}个</p>
                <div class="scroller  custom-select-scroll1" style="height: 280px;" data-always-visible="1" data-rail-visible1="0"
                     data-handle-color="#ccc">
                    <p ng-repeat="x in params.violationsStation">{{x.name}}</p>
                </div>
            </div>
        </div>
    </div>
</div>
        </div>
    </div>